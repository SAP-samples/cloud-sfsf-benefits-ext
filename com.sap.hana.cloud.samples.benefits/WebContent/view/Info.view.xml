<mvc:View  xmlns:mvc="sap.ui.core.mvc"
           xmlns="sap.m"
           controllerName="com.sap.hana.cloud.samples.benefits.controller.Main"
           xmlns:l="sap.ui.layout"
           height="100%">

    <Page title="{b_i18n>INFO_PAGE_NAME}" showNavButton="true" navButtonTap="onBackPress">
        <headerContent>
            <Button id="logoutButton" press="logoutButtonPressed" icon="sap-icon://log"
                    text="{b_i18n>LOGOUT}" />
        </headerContent>
        <content>
            <l:VerticalLayout id="infoMainLayout">
                <l:content>
                    <Panel width="100%" id="empProfilePanel">
                        <headerToolbar>
                            <Toolbar>
                                <Label text="Employee Profile" />
                            </Toolbar>
                        </headerToolbar>
                        <l:HorizontalLayout id="empProfileHLayout">
                            <l:content>
                                <Image src="{path:'empPhoto>/d/userPhoto', formatter:'.setPhoto'}" id="empImage"></Image>
                                <l:VerticalLayout>
                                    <l:content>
                                        <Text text="{userInfo>/d/results/0/firstName} {userInfo>/d/results/0/lastName}" data-text-align="Left" class="bigText headElement"/>
                                        <Text text="{userInfo>/d/results/0/email}" data-text-align="Left" class="emailIcon mediumText"/>
                                        <Text text="{userInfo>/d/results/0/businessPhone}" data-text-align="Left" class="phoneIcon mediumText"/>
                                        <Text text="{userInfo>/d/results/0/location}" data-text-align="Left" class="locationIcon mediumText"/>
                                    </l:content>
                                </l:VerticalLayout>
                            </l:content>
                        </l:HorizontalLayout>
                    </Panel>
                    <l:HorizontalLayout id="empJobInfoLayout">
                        <l:content>
                            <Panel width="100%" id="empJobInfoPanel">
                                <headerToolbar>
                                    <Toolbar>
                                        <Label text="Employment Info" />
                                    </Toolbar>
                                </headerToolbar>
                                <l:VerticalLayout>
                                    <l:content>

                                        <l:HorizontalLayout>
                                            <l:content>
                                                <Text text="Job Title:" data-text-align="Left" class="mediumText rowTitle"/>
                                                <Text text="{userInfo>/d/results/0/title}" data-text-align="Left" class="mediumText"/>
                                            </l:content>
                                        </l:HorizontalLayout>
                                        <l:HorizontalLayout>
                                            <l:content>
                                                <Text text="Department:" data-text-align="Left" class="mediumText rowTitle"/>
                                                <Text text="{userInfo>/d/results/0/department}" data-text-align="Left" class="mediumText"/>
                                            </l:content>
                                        </l:HorizontalLayout>
                                        <l:HorizontalLayout>
                                            <l:content>
                                                <Text text="Division:" data-text-align="Left" class="mediumText rowTitle"/>
                                                <Text text="{userInfo>/d/results/0/division}" data-text-align="Left" class="mediumText"/>
                                            </l:content>
                                        </l:HorizontalLayout>
                                    </l:content>
                                </l:VerticalLayout>
                            </Panel>
                        </l:content>
                    </l:HorizontalLayout>
                    <Panel width="100%" id="hrProfilePanel">
                        <headerToolbar>
                            <Toolbar>
                                <Label text="Employee's HR Info" />
                            </Toolbar>
                        </headerToolbar>
                        <l:HorizontalLayout id="hrProfileHLayout">
                            <l:content>
                                <Image src="{path:'hrPhoto>/d/hrPhoto', formatter:'.setPhoto'}" id="hrImage"></Image>
                                <l:VerticalLayout>
                                    <l:content>
                                        <Text text="{userInfo>/d/results/1/firstName} {userInfo>/d/results/1/lastName}" data-text-align="Left" class="bigText headElement"/>
                                        <Text text="{userInfo>/d/results/1/email}" data-text-align="Left" class="emailIcon mediumText"/>
                                        <Text text="{userInfo>/d/results/1/businessPhone}" data-text-align="Left" class="phoneIcon mediumText"/>
                                        <Text text="{userInfo>/d/results/1/location}" data-text-align="Left" class="locationIcon mediumText"/>
                                    </l:content>
                                </l:VerticalLayout>
                            </l:content>
                        </l:HorizontalLayout>
                    </Panel>
                </l:content>
            </l:VerticalLayout>
        </content>
    </Page>
</mvc:View>